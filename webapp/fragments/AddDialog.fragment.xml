<core:FragmentDefinition
    xmlns="sap.m"
	xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form">
    <Dialog id="idAddDialog" title="Add Item">
        <content>
            <f:SimpleForm editable="true">
                <f:content>
                    <Label text="Title"/>
                    <Input value="{AddItemModel>/title}" />
                    <Label text="Description"/>
                    <TextArea value="{AddItemModel>/descr}" />
                    <Label text="Stock"/>
                    <Input value="{AddItemModel>/stock}" />
                    <Label text="Price"/>
                    <Input value="{AddItemModel>/Price}" />
                </f:content>
            </f:SimpleForm>
        </content>
        <beginButton>
            <Button text="Add" press="AddConfirm" type="Accept"/>
        </beginButton>
        <endButton>
            <Button text="Close" press="onClose" type="Reject"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>