<core:FragmentDefinition
    xmlns="sap.m"
	xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form">
    <Dialog id="idEditDialog" title="Update Item">
        <content>
            <f:SimpleForm editable="true">
                <f:content>
                    <Label text="Title"/>
                    <Input value="{BooksModel>title}" />
                    <Label text="Description"/>
                    <TextArea value="{BooksModel>descr}" />
                    <Label text="Stock"/>
                    <Input value="{BooksModel>stock}" />
                    <Label text="Price"/>
                    <Input value="{BooksModel>Price}" />
                </f:content>
            </f:SimpleForm>
        </content>
        <beginButton>
            <Button text="Update" press="UpdateConfirm" type="Accept"/>
        </beginButton>
        <endButton>
            <Button text="Close" press="onCloseEditDialog" type="Reject"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>